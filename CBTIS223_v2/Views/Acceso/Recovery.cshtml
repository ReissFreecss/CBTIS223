@model CBTIS223_v2.Models.RecoveryPasswordViewModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="es">

<head>
    <title>Login</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
          crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/Login.css" asp-append-version="true" />
</head>

<body class="bg-white">
    <div class="wrapper">
        <header>
        </header>
        <div class="container">
            <div class="row vh-100 align-items-center justify-content-center">
                <div class="col-sm-8 col-md-6 col-lg-4 bg-white rounded p-4 shadow containerF">
                    <div class="row justify-content-center mb-4">
                        <img src="/imagenes/dgeti.png" class="w-25" />
                        <img src="~/imagenes/cbtis.png" class="w-25" />
                    </div>
                    <form action="@Url.Content("~/Acceso/Recovery")" method="post">

                        @Html.HiddenFor(d=>d.token)
                        <div class="mb-4">
                            <div class="text-center font-weight-bold mb-4 h5">
                                <label for="inicio"><strong>Recuperación de Contraseña</strong></label>
                            </div>
                            <label for="usuario" class="form-label"><strong>Escribe tu nueva contraseña</strong></label>
                            @Html.PasswordFor(d=>d.password,new{ @class="form-control"})
                            @Html.ValidationMessageFor(d=>d.password,null,new{style="color:red"})

                            <label for="usuario" class="form-label"><strong>Vuelve a escribir la contraseña</strong></label>
                            @Html.PasswordFor(d=>d.password2,new{ @class="form-control"})
                            @Html.ValidationMessageFor(d=>d.password2,null,new{style="color:red"})
                            <div class="text-center mt-4">
                                <button class="btn w-50 btnclr mx-auto">Recuperar</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <footer>
            <p>CBtis 223 &copy; 2023. Todos los derechos reservados.</p>
            <p>Contacto: </p>
        </footer>
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    </div>
</body>
</html>

