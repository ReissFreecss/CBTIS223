@model Usuario
@{
    Layout = null;
}
<!-- Mensajes de recuperacion de contraseña -->
<div style="color:green"> <!-- Muestra un mensaje de exito en color verde -->
    <strong>@ViewBag.Message</strong>
</div>

<div style="color:red"> <!-- Muestra un mensaje de error en color rojo -->
    <strong>@ViewBag.Error</strong>
</div>

<!DOCTYPE html>
<html lang="es">

<head>
    <title>Login</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
          crossorigin="anonymous">

    <link rel="stylesheet" href="~/css/Login.css" asp-append-version="true" />

    <!-- Font Awesome CSS para uso de iconos-->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">

    <!--  Bootstrap y jQuery  -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js"></script>

    <script src="~/js/pw.js"></script> <!-- Enlace de javascript que permite mostrar controlar/ocultar la contraseña mediante un boton -->

</head>

<body class="bg-white">
    <div class="wrapper">
        <header>
        </header>
        <div class="container">
            <div class="row vh-100 align-items-center justify-content-center">
                <div class="col-sm-8 col-md-6 col-lg-4 bg-white rounded p-4 shadow containerF">
                    <!-- Iconos institucionales para seccion de inicio de sesion -->
                    <div class="row justify-content-center mb-4">
                        <img src="/imagenes/dgeti.png" class="w-25" />
                        <img src="~/imagenes/cbtis.png" class="w-25" />
                    </div>
                    <form asp-controller="Acceso" asp-action="Login" method="post">

                        <!-- Seccion de Usuario -->
                        <div class="mb-4">
                            <div class="text-center font-weight-bold mb-4 h5">
                                <label for="inicio"><strong>Inicio de sesion</strong></label>
                            </div>
                            <label for="inicio">Inicia sesion con tu cuenta administriva:</label><br>
                            <label for="usuario" class="form-label"><strong>Usuario</strong></label>
                            <input type="email"  class="form-control" asp-for="Correo">
                        </div>

                        <!-- Seccion de contraseña y boton de inicio de sesion -->
                        <div class="mb-4">
                            <label for="pwd" class="form-label"><strong>Contraseña</strong></label>
                            <div class="input-group">
                                <input type="password" class="form-control" placeholder="Ingresa la contraseña" id="pwd" asp-for="Contraseña">

                                <!-- Se enlaza icono con campo de contraseña para ocultar/mostrar -->
                                <div class="input-group-append">
                                    <span class="input-group-text show-password-icon" id="showPassword" style="cursor: pointer;">
                                        <i class="fas fa-eye-slash"></i>
                                    </span>
                                </div>
                            </div>
                            <div class="text-center mt-4">
                                <button type="submit" class="btn w-50 btnclr mx-auto">Iniciar Sesión</button>
                            </div>
                        </div>

                        <!-- Enlace a recuperacion de contraseña -->
                        <div>
                            @Html.ActionLink("¿Has olvidado tu contraseña?","StartRecovery") 
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <footer>
            <p>CBtis 223 &copy; 2023. Todos los derechos reservados.</p>
            <p>Contacto: </p>
        </footer>
    </div>
</body>
</html>
