@using Microsoft.AspNetCore.Identity

@{
    Layout = null;
}

<!DOCTYPE HTML>
<html>
<meta charset="utf-8">
<meta name="viewport" content="width=device-width, initial-scale=1">

<head>
    <title>CRUD Institución</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
          crossorigin="anonymous">

    <!-- Bootstrap JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js"
            integrity="sha384-k4GT4mMEkCk4OfF5/MF5Lm5wKj5l5T5u5v5C5n5u5O5x5V5B5r5Z5E5O5W5B5V5E5T5u5C5"
            crossorigin="anonymous"></script>

    <!-- CSS -->
    <link rel="stylesheet" href="~/css/institucion.css" asp-append-version="true" />

    <!-- Font Awesome CSS -->
    <script src="https://kit.fontawesome.com/1ca77c727c.js" crossorigin="anonymous"></script>

</head>

<body class="bg-white">
    <div class="wrapper">
        <nav class="navbar navbar-expand-lg navbar-light bg-light navbar-custom">
            <a class="navbar-brand" href="#">
                <img src="~/imagenes/cbtis.jpg" alt="Logo" class="navbar-logo">
            </a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav"
                    aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item">
                        @if (User.IsInRole("jefeVinc") || User.IsInRole("Root") || User.IsInRole("jefeDep") || User.IsInRole("ofPrac"))
                        {
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Registro2">Practicas Profesionales</a>
                        }
                    </li>
                    <li class="nav-item">
                        @if (User.IsInRole("jefeEsc") || User.IsInRole("Root") || User.IsInRole("jefeDep") || User.IsInRole("ofServ"))
                        {
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Registro">Servicio Social</a>
                        }
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Documentos">Documentos</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Estadisticas">Estadisticas</a>
                    </li>
                    <li class="nav-item">
                        @if (User.IsInRole("Root"))
                        {
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Institucion">Instituciones</a>
                        }
                    </li>
                    <li class="nav-item">
                        @if (User.IsInRole("Root"))
                        {
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Escuela">Datos Escolares</a>
                        }
                    </li>
                    <li class="nav-item">
                        @if (User.IsInRole("Root"))
                        {
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Bitacora">Bitacora</a>
                        }
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Acceso" asp-action="Login">Cerrar sesion</a>
                    </li>
                </ul>
            </div>
        </nav>
        <div class="container">
            <div class="row">
                <!-- Left Column: User Creation -->
                <div class="col-md-4">
                    <form>
                        <h4 class="mt-4">Institucion CRUD</h4>
                        <div class="mb-3">
                            <label for="Institucion" class="form-label"><strong>ID:</strong></label>
                            <input type="number" class="form-control" id="ID" name="ID" required>
                        </div>
                        <div class="mb-3">
                            <label for="Institucion" class="form-label"><strong>Institucion:</strong></label>
                            <input type="text" class="form-control" id="Institucion" name="Institucion" required>
                        </div>
                        <div class="row mb-3">
                            <div class="col-md-12">
                                <label for="Tipo" class="form-label"><strong>Tipo:</strong></label>
                                <select class="form-select" id="Tipo" name="Tipo" required>
                                    <option selected>Selecciona el tipo de institucion</option>
                                    <option value="Publica">Publica</option>
                                    <option value="Privada">Privada</option>
                                </select>
                            </div>
                        </div>
                        <div class="mb-3">
                            <label for="Responsable" class="form-label"><strong>Responsable de la institucion:</strong></label>
                            <input type="text" class="form-control" id="Responsable" name="Responsable" required>
                        </div>
                        <div class="mb-3">
                            <label for="Institucion" class="form-label"><strong>Ubicacion:</strong></label>
                            <input type="text" class="form-control" id="Ubicacion" name="Ubicacion" required>
                        </div>
                        <div class="row mb-3 mb-4">
                            <div class="col-md-6">
                                <div class="button-row text-md-start text-center">
                                    <button type="button" class="btn w-75 btnclr">Limpiar</button>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="button-row text-md-end text-center">
                                    <button type="button" class="btn w-75 btnclr">Crear</button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>

                <!-- Tabla -->
                <div class="col-md-6">
                    <h4 class="mt-4">Lista de Instituciones</h4>
                    <table class="table table-bordered">
                        <thead class="tabclr">
                            <tr>
                                <th>ID</th>
                                <th>Institucion</th>
                                <th>Tipo</th>
                                <th>Responsable</th>
                                <th>Ubicacion</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>1</td>
                                <td>Institucion 1</td>
                                <td>Publica</td>
                                <td>Responsable 1</td>
                                <td>Zacatepec de Hidalgo</td>
                                <td>
                                    <a href=""><i class="icono fas fa-pen-to-square fa-xl"></i></a>
                                    <a href=""><i class="icono fas fa-trash fa-xl"></i></a>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
            <footer>
                <p>CBtis 223 &copy; 2023. Todos los derechos reservados.</p>
                <p>Contacto: </p>
            </footer>
        </div>
</body>

</html>
