@using Microsoft.AspNetCore.Identity

@{
    List<SelectListItem> items = (List<SelectListItem>)ViewBag.items;
    Layout = null;
}

<!DOCTYPE HTML>
<html>
<meta charset="utf-8">
<meta name="viewport" content="width=device-width, initial-scale=1">

<head>
    <title>Practicas Profesionales</title>
    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
          crossorigin="anonymous">

    <!-- Bootstrap-datepicker CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-datepicker@1.9.0/dist/css/bootstrap-datepicker.min.css" rel="stylesheet">

    <!-- Bootstrap JavaScript and Popper.js -->  <!-- Permite funcionar el menu minimizado -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.5/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js"></script>

    <!-- Bootstrap-datepicker -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap-datepicker@1.9.0/dist/js/bootstrap-datepicker.min.js"></script>

    <!-- JS -->
    <script src="~/js/periodo.js"></script>

    <!-- CSS -->
    <link rel="stylesheet" type="text/css" href="~/css/registro.css" />

    <!-- Font Awesome CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">

</head>

<body class="bg-white">
    <div class="wrapper">
        <!-- Barra de navegacion -->
        <nav class="navbar navbar-expand-lg navbar-light bg-light navbar-custom">
            <a class="navbar-brand" href="#">
                <img src="~/imagenes/cbtis.jpg" alt="Logo" class="navbar-logo">
            </a>
            <!-- Boton donde colapsa el menu al ser minimizado-->
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                    aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <!-- Clase que permite colapsar al menu -->
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item">
                        <!-- Oculta el boton para cualquier rol fuera de esta lista -->
                        @if (User.IsInRole("jefeVinc") || User.IsInRole("Root") || User.IsInRole("jefeDep") || User.IsInRole("ofPrac"))
                        {
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Registro2">Practicas Profesionales</a>
                        }
                    </li>
                    <li class="nav-item">
                        @if (User.IsInRole("jefeEsc") || User.IsInRole("Root") || User.IsInRole("jefeDep") || User.IsInRole("ofServ"))
                        {
                            <a class="nav-link" asp-area="" asp-controller="Registros" asp-action="Registro">Servicio Social</a>
                        }
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Documentos">Documentos</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Estadisticas">Estadisticas</a>
                    </li>
                    <li class="nav-item">
                        @if (User.IsInRole("Root"))
                        {
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Institucion">Instituciones</a>
                        }
                    </li>
                    <li class="nav-item">
                        @if (User.IsInRole("Root"))
                        {
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Escuela">Datos Escolares</a>
                        }
                    </li>
                    <li class="nav-item">
                        @if (User.IsInRole("Root"))
                        {
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Bitacora">Bitacora</a>
                        }
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Acceso" asp-action="Login">Cerrar sesion</a>
                    </li>
                </ul>
            </div>
        </nav>
        <div class="container">
            <form method="post" asp-action="InsertarRegistros" asp-controller="Registros">
                <!--Numero de control y Nombre-->
                <div class="row mb-3">
                    <h4 class="mt-4">Registro Practicas Profesionales</h4>
                    <div class="col-md-6">
                        <label for="NumeroControl" class="form-label"><strong>Numero de Control:</strong></label>
                        <input type="text" class="form-control" placeholder="Ej. 20330051420002" id="NumeroControl" name="NumeroControl" required>
                    </div>
                    <div class="col-md-6">
                        <label for="Nombre" class="form-label"><strong>Nombre(s) del alumno:</strong> </label>
                        <input type="text" class="form-control" id="Nombre" name="Nombre" readonly required>
                    </div>
                </div>

                <!--Apellidos-->
                <div class="row mb-3">
                    <div class="col-md-6 ">
                        <label for="AP" class="form-label"><strong>Apellido Paterno del alumno:</strong></label>
                        <input type="text" class="form-control" id="AP" name="AP" readonly required>
                    </div>
                    <div class="col-md-6 ">
                        <label for="AM" class="form-label"><strong>Apellido Materno del alumno:</strong> </label>
                        <input type="text" class="form-control" id="AM" name="AM" readonly>
                    </div>
                </div>

                <!--CURP y Especialidad-->
                <div class="row mb-3">
                    <div class="col-md-6">
                        <label for="CURP" class="form-label"><strong>CURP:</strong></label>
                        <input type="text" class="form-control" id="CURP" name="CURP" readonly required>
                    </div>

                    <div class="col-md-6">
                        <label for="ESPECIALIDAD" class="form-label"><strong>Especialidad:</strong></label>
                        <input type="text" class="form-control" id="Especialidad" name="Especialidad" readonly required>
                    </div>
                </div>

                <!--Ciclo Escolar-->
                <div class="row mb-3">
                    <div class="col-md-6">
                        <label for="Ciclo" class="form-label"><strong>Ciclo Escolar:</strong></label>
                        <select class="form-select" id="Ciclo" name="Ciclo" required>
                            <option selected>Selecciona el Ciclo Escolar</option>
                            <option value="2019-2022">2019-2022</option>
                            <option value="2020-2023">2020-2023</option>
                            <option value="2021-2024">2021-2024</option>
                            <option value="2022-2025">2022-2025</option>
                            <option value="2023-2026">2023-2026</option>
                        </select>
                    </div>
                </div>

                <!--Institucion-->
                <div class="row mb-3">
                    <div class="col-md-6">
                        <!-- Seleccionar institucion -->

                    </div>
                    <div class="col-md-6">
                        <!--Lectura de actividad que realiza el alumno en su servicio-->
                        <label for="Actividad_Servicio" class="form-label"><strong>Actividad que realiza:</strong> </label>
                        <input type="text" class="form-control" id="Actividad_Servicio" name="Actividad_Servicio"
                               oninput="this.value = this.value.toUpperCase()" required>
                    </div>
                </div>

                <!--Periodo-->
                <div class="row mb-3">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="FechaInicio" class="form-label"><strong>Fecha Inicio:</strong></label>
                            <div class="input-group">
                                <input type="date" id="FechaInicio" pattern="\d{4}/\d{2}/\d{2}" placeholder="aaaa/mm/dd" name="FechaInicioServicio" class="form-control" required>
                                <!--<div class="input-group-append">
                                    <span class="input-group-text Inicio" id="FechaInicioServicio" name="FechaInicioServicio" style="cursor: pointer;">
                                        <i class="fas fa-calendar"></i>
                                    </span>
                                </div>
                                -->
                            </div>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="FechaFinal" class="form-label"><strong>Fecha Final:</strong></label>
                            <div class="input-group">
                                <input type="date" id="FechaFinal" pattern="\d{4}/\d{2}/\d{2}" placeholder="aaaa/mm/dd" name="FechaTerminoServicio" class="form-control" required>
                                <!--<div class="input-group-append">
                                    <span class="input-group-text Fin" id="FechaTerminoServicio" name="FechaTerminoServicio" style="cursor: pointer;">
                                        <i class="fas fa-calendar"></i>
                                    </span>
                                </div>
                                -->
                            </div>
                        </div>
                    </div>
                </div>

                <script>
                    const input = document.getElementById('FechaInicio');
                    input.addEventListener('change', () => {
                        console.log(input.value);
                    });
                    const input2 = document.getElementById('FechaFinal');
                    input2.addEventListener('change', () => {
                        console.log(input2.value);
                    });
                </script>
                <!--Botones-->
                <div class="row mb-3 mb-4">
                    <div class="col-md-6">
                        <button type="button" class="btn w-25 btnclr button-row ">Limpiar</button>
                    </div>
                    <div class="col-md-6 text-end">
                        <button type="button" class="btn w-25 btnclr button-row">Registro</button>
                    </div>
                </div>

            </form>
        </div>
        <footer>
            <p>CBtis 223 &copy; 2023. Todos los derechos reservados.</p>
            <p>Contacto: </p>
        </footer>
    </div>
</body>

</html>
