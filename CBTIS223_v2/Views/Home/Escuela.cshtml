@using Microsoft.AspNetCore.Identity
@model Escuela
@{
    Layout = null;
    cbtis223Context ct = new cbtis223Context();
    IList<Escuela> escuelas = await ct.GetEscuelas();
    Escuela Datos = ViewBag.Datos;
}
<div style="color:red">
    <!-- Muestra un mensaje de error en color rojo -->
    <strong>@ViewBag.Error</strong>
</div>
<div style="color:green">
    <!-- Muestra un mensaje de exito en color verde -->
    <strong>@ViewBag.Succesful</strong>
</div>

<!DOCTYPE HTML>
<html>
<meta charset="utf-8">
<meta name="viewport" content="width=device-width, initial-scale=1">

<head>
    <title>Datos Escolares</title>

    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
          crossorigin="anonymous">

    <!-- Bootstrap JavaScript and Popper.js -->  <!-- Permite funcionar el menu minimizado -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.5/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js"></script>

    <!-- CSS -->
    <link rel="stylesheet" href="~/css/escuela.css" asp-append-version="true" />

</head>

<body class="bg-white">
    <div class="wrapper">
        <!-- Barra de navegacion -->
        <nav class="navbar navbar-expand-lg navbar-light bg-light navbar-custom">
            <a class="navbar-brand" href="#">
                <img src="~/imagenes/cbtis.jpg" alt="Logo" class="navbar-logo">
            </a>
            <!-- Boton donde colapsa el menu al ser minimizado-->
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                    aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <!-- Clase que permite colapsar al menu -->
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item">
                        <!-- Oculta el boton para cualquier rol fuera de esta lista -->
                        @if (User.IsInRole("jefeVinc") || User.IsInRole("Root") || User.IsInRole("jefeDep") || User.IsInRole("ofPrac"))
                        {
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Registro2">Practicas Profesionales</a>
                        }
                    </li>
                    <li class="nav-item">
                        @if (User.IsInRole("jefeEsc") || User.IsInRole("Root") || User.IsInRole("jefeDep") || User.IsInRole("ofServ"))
                        {
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Registro">Servicio Social</a>
                        }
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Documentos">Documentos</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Estadísticas">Estadisticas</a>
                    </li>
                    <li class="nav-item">
                        @if (User.IsInRole("Root"))
                        {
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Institución">Instituciones</a>
                        }
                    </li>
                    <li class="nav-item">
                        @if (User.IsInRole("Root"))
                        {
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Escuela">Datos Escolares</a>
                        }
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Acceso" asp-action="Login">Cerrar sesion</a>
                    </li>
                </ul>
            </div>
        </nav>
        <div class="container">
            <div class="row">
                <!-- Tabla -->
                <div class="col-md-6">
                    <h4 class="mt-4">Datos de la escuela</h4>
                    <table class="table table-bordered">
                        <thead class="tabclr">
                            <tr>
                                <th>Escuela</th>
                                <th>Director</th>
                                <th>Encargado General</th>
                                <th>Director General</th>
                                <th>Acción</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in escuelas)
                            {
                                <tr>
                                            <td class="text-center">@Html.DisplayFor(x => item.NombreEscuela)</td>
                                            <td class="text-center">@Html.DisplayFor(x =>item.NombreDirector)</td>
                                            <td class="text-center">@Html.DisplayFor(x =>item.NombreEncargadoEstatal)</td>
                                            <td class="text-center">@Html.DisplayFor(x =>item.NombreDirectorGeneral)</td>
                                            <td>
                                                @*Boton para dirigir a la vista donde recibes nuevos datos*@
                                        <a class="btn btn-primary btn-sm" asp-action="Editar" asp-controller="Escuelas"
                                                   asp-route-id="@item.ID" title="Editar datos de @item.NombreEscuela">
                                                    <i class="button-row">EDITAR</i>
                                                </a>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <div class="col-md-6">
                       
                    </div>
                </div>
            </div>
            <footer>
                <p>CBtis 223 &copy; 2023. Todos los derechos reservados.</p>
                <p>Contacto: </p>
            </footer>
        </div>
</body>

</html>
