@using Microsoft.AspNetCore.Identity

@{
    Layout = null;
}

<!DOCTYPE html>
<html>

<head>
    <title>Estadisticas</title>

    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
          crossorigin="anonymous">

    <link rel="stylesheet" type="text/css" href="~/css/documentos.css" />

    <!-- Bootstrap JavaScript and Popper.js -->  <!-- Permite funcionar el menu minimizado -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.5/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js"></script>

</head>

<body class="bg-white">
    <div class="wrapper">
        <!-- Barra de navegacion -->
        <nav class="navbar navbar-expand-lg navbar-light bg-light navbar-custom">
            <a class="navbar-brand" href="#">
                <img src="~/imagenes/cbtis.jpg" alt="Logo" class="navbar-logo">
            </a>
            <!-- Boton donde colapsa el menu al ser minimizado-->
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                    aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <!-- Clase que permite colapsar al menu -->
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item">
                        <!-- Oculta el boton para cualquier rol fuera de esta lista -->
                        @if (User.IsInRole("jefeVinc") || User.IsInRole("Root") || User.IsInRole("jefeDep") || User.IsInRole("ofPrac"))
                        {
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Registro2">Practicas Profesionales</a>
                        }
                    </li>
                    <li class="nav-item">
                        @if (User.IsInRole("jefeEsc") || User.IsInRole("Root") || User.IsInRole("jefeDep") || User.IsInRole("ofServ"))
                        {
                            <a class="nav-link" asp-area="" asp-controller="Registros" asp-action="Registro">Servicio Social</a>
                        }
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Documentos">Documentos</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Estadisticas">Estadisticas</a>
                    </li>
                    <li class="nav-item">
                        @if (User.IsInRole("Root"))
                        {
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Institucion">Instituciones</a>
                        }
                    </li>
                    <li class="nav-item">
                        @if (User.IsInRole("Root"))
                        {
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Escuela">Datos Escolares</a>
                        }
                    </li>
                    <li class="nav-item">
                        @if (User.IsInRole("Root"))
                        {
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Bitacora">Bitacora</a>
                        }
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Acceso" asp-action="Login">Cerrar sesion</a>
                    </li>
                </ul>
            </div>
        </nav>
        <div class="container">
            <div class="row">
                <div class="col-md-4 mt-4">
                    <h4>Expedir Estadisticas:</h4>
                    <h5>Ciclo Escolar:</h5>
                    <select id="Selector" class="form-select mb-4">
                        <option value="2017-2020">2017-2020</option>
                        <option value="2020-2023">2020-2023</option>
                    </select>
                    <h5>Especialidad:</h5>
                    <select id="Selector" class="form-select mb-4">
                        <option value="PROGRAMACION">PROGRAMACION</option>
                        <option value="CONSTRUCCION">CONSTRUCCION</option>
                        <option value="PREPARACION DE ALIMENTOS Y BEBIDAS">PREPARACION DE ALIMENTOS Y BEBIDAS</option>
                        <option value="DISEÑO GRAFICO DIGITAL">DISEÑO GRAFICO DIGITAL</option>
                        <option value="ELECTRICIDAD">ELECTRICIDAD</option>
                        <option value="ADMINISTRACION DE RECURSOS HUMANOS">ADMINISTRACION DE RECURSOS HUMANOS</option>
                    </select>
                    <h5>Institucion:</h5>
                    <select id="Selector" class="form-select mb-4">
                        <option value="CBTIS 223">CBTIS 223</option>
                        <option value="iCBTIS 223">CBTis 136</option>
                    </select>
                    <button id="showPdfButton" class="btnclr">Filtrar</button>
                </div>
                <!--Visor PDF -->
                <div class="pdf-container col-md-8">
                    <iframe id="pdf" width="100%" height="500" frameborder="0"></iframe>
                </div>
            </div>
        </div>
        <footer>
            <p>CBtis 223 &copy; 2023. Todos los derechos reservados.</p>
            <p>Contacto: </p>
        </footer>
    </div>
</body>

</html>