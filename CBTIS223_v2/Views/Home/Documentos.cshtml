@using Microsoft.AspNetCore.Identity
@{
    Layout = null;
}

<!DOCTYPE html>
<html>

<head>
    <title>Documentos</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
          crossorigin="anonymous">

    <link rel="stylesheet" type="text/css" href="~/css/documentos.css" />

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"
            integrity="sha384-KyZXEAg3QhqLMpG8r+PW8l5O8R18EJSf5PPSb5l5p5zqo4pE2F5/18z5p5z5E5Q5v5z5g5l5p5z5E5"
            crossorigin="anonymous"></script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js"
            integrity="sha384-k4GT4mMEkCk4OfF5/MF5Lm5wKj5l5T5u5v5C5n5u5O5x5V5B5r5Z5E5O5W5B5V5E5T5u5C5"
            crossorigin="anonymous"></script>
</head>
<body class="bg-white">
    <div class="wrapper">
        <nav class="navbar navbar-expand-lg navbar-light bg-light navbar-custom">
            <a class="navbar-brand" href="#">
                <img src="~/imagenes/cbtis.jpg" alt="Logo" class="navbar-logo">
            </a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav"
                    aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item">
                        @if (User.IsInRole("jefeVinc") || User.IsInRole("Root") || User.IsInRole("jefeDep") || User.IsInRole("ofPrac"))
                        {
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Registro2">Practicas Profesionales</a>
                        }
                    </li>
                    <li class="nav-item">
                        @if (User.IsInRole("jefeEsc") || User.IsInRole("Root") || User.IsInRole("jefeDep") || User.IsInRole("ofServ"))
                        {
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Registro">Servicio Social</a>
                        }
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Documentos">Documentos</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Estadisticas">Estadisticas</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Acceso" asp-action="Login">Cerrar sesion</a>
                    </li>
                </ul>
            </div>
        </nav>
        <div class="container">
            <div class="row">
                <div class="col-md-4 mt-4">
                    <h4>Expedir documentos:</h4>
                    <h5>Ingresa número de control:</h5>
                    <input type="text" class="form-control mb-4" id="controlNumber"
                           placeholder="Número de control">
                    <h5>Tramite:</h5>
                    <select id="Selector" class="form-select mb-4">
                        <option value="Aceptacion">Carta de aceptacion</option>
                        <option value="Liberacion">Carta de liberacion</option>
                    </select>
                    <!--Descargar PDF -->
                    <form asp-action="DescargarPDF" asp-controller="Home">
                        <button class="btn btn-success" type="submit">Descargar PDF</button>
                    </form>
                </div>
                <!--Visor PDF -->
                <div class="pdf-container col-md-8">
                    <iframe id="pdf" width="100%" height="500" frameborder="0"></iframe>
                </div>
            </div>
        </div>
        <footer>
            <p>CBtis 223 &copy; 2023. Todos los derechos reservados.</p>
            <p>Contacto: </p>
        </footer>
    </div>
</body>

</html>