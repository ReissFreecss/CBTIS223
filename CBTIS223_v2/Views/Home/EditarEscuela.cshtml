@using Microsoft.AspNetCore.Identity
@model Escuela
@{
    Layout = null;
    Escuela Datos = ViewBag.Datos;
}

<!DOCTYPE HTML>
<html>
<meta charset="utf-8">
<meta name="viewport" content="width=device-width, initial-scale=1">

<head>
    <title>Datos Escolares</title>

    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
          crossorigin="anonymous">

    <!-- Bootstrap JavaScript and Popper.js -->  <!-- Permite funcionar el menu minimizado -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.5/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js"></script>

    <!-- CSS -->
    <link rel="stylesheet" href="~/css/escuela.css" asp-append-version="true" />

</head>

<body class="bg-white">
    <div class="wrapper">
        <!-- Barra de navegacion -->
        <nav class="navbar navbar-expand-lg navbar-light bg-light navbar-custom">
            <a class="navbar-brand" href="#">
                <img src="~/imagenes/cbtis.jpg" alt="Logo" class="navbar-logo">
            </a>
            <!-- Boton donde colapsa el menu al ser minimizado-->
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                    aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <!-- Clase que permite colapsar al menu -->
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item">
                        <!-- Oculta el boton para cualquier rol fuera de esta lista -->
                        @if (User.IsInRole("jefeVinc") || User.IsInRole("Root") || User.IsInRole("jefeDep") || User.IsInRole("ofPrac"))
                        {
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Registro2">Practicas Profesionales</a>
                        }
                    </li>
                    <li class="nav-item">
                        @if (User.IsInRole("jefeEsc") || User.IsInRole("Root") || User.IsInRole("jefeDep") || User.IsInRole("ofServ"))
                        {
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Registro">Servicio Social</a>
                        }
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Documentos">Documentos</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Estadisticas">Estadísticas</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Home" asp-action="EstadisticasPra">Estadísticas Prac</a>
                    </li>
                    <li class="nav-item">
                        @if (User.IsInRole("Root"))
                        {
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Institucion">Instituciones</a>
                        }
                    </li>
                    <li class="nav-item">
                        @if (User.IsInRole("Root"))
                        {
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Escuela">Datos Escolares</a>
                        }
                    </li>
                    <li class="nav-item">
                        @if (User.IsInRole("Root"))
                        {
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Bitacora">Bitacora</a>
                        }
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Acceso" asp-action="Login">Cerrar sesion</a>
                    </li>
                </ul>
            </div>
        </nav>
        <div class="container">
            <div class="row">
                <!-- Tabla -->
                <div class="col-md-6">
                    <h4 class="mt-4">Datos de la escuela</h4>
                    <table class="table table-bordered">
                        <thead class="tabclr">
                            <tr>
                                <th>Escuela</th>
                                <th>Director</th>
                                <th>Encargado General</th>
                                <th>Director General</th>
                                <th>Director General Profesiones</th>
                            </tr>
                        </thead>
                        <tbody>
                         
                                <tr>
                                    <td class="text-center">@Html.DisplayFor(x => Datos.NombreEscuela)</td>
                                    <td class="text-center">@Html.DisplayFor(x =>Datos.NombreDirector)</td>
                                    <td class="text-center">@Html.DisplayFor(x =>Datos.NombreEncargadoEstatal)</td>
                                    <td class="text-center">@Html.DisplayFor(x =>Datos.NombreDirectorGeneral)</td>
                                    <td class="text-center">@Html.DisplayFor(x =>Datos.NombreDirectorGeneralProfesiones)</td>
                                </tr>
                            
                        </tbody>
                    </table>
                    <div class="col-md-6">
                    </div>
                </div>
                <div class="col-md-4">
                    @*Form para recibir todos los nuevos datos y regresar al controlador en el metodo HTTPPOST*@
                    <form method="post" asp-action="Insertar" asp-controller="Escuelas">
                        <h4 class="mt-4">Actualizar Datos:</h4>
                        @*El id no se muestra pero se guarda*@
                        <input type="hidden" asp-for="ID" />
                        <div class="mb-3">
                            <label for="Institucion" class="form-label"><strong>Escuela:</strong></label>
                            <input type="text" class="form-control" id="NombreEscuela" name="NombreEscuela" value="@Datos.NombreEscuela" oninput="this.value = this.value.toUpperCase()"  required readonly>
                        </div>
                        <div class="mb-3">
                            <label for="Institucion" class="form-label"><strong>Director</strong></label>
                            <input type="text" class="form-control" id="NombreDirector" name="NombreDirector" oninput="this.value = this.value.toUpperCase()" required>
                        </div>
                        <div class="mb-3">
                            <label for="Responsable" class="form-label"><strong>Responsable Estatal :</strong></label>
                            <input type="text" class="form-control" id="NombreEncargadoEstatal" name="NombreEncargadoEstatal" oninput="this.value = this.value.toUpperCase()"  required>
                        </div>
                        <div class="mb-3">
                            <label for="Institucion" class="form-label"><strong>Director General:</strong></label>
                            <input type="text" class="form-control" id="NombreDirectorGeneral" name="NombreDirectorGeneral" oninput="this.value = this.value.toUpperCase()" required>
                        </div>
                        <div class="mb-3">
                            <label for="Institucion" class="form-label"><strong>Director General de Profesiones:</strong></label>
                            <input type="text" class="form-control" id="NombreDirectorGeneralProfesiones" name="NombreDirectorGeneralProfesiones" oninput="this.value = this.value.toUpperCase()" required>
                        </div>
                        <div class="row mb-3 mb-4">
                            <div class="col-md-6">
                                <div class="button-row text-md-start text-center">
                                    <button type="reset" class="btn w-75 btnclr">Limpiar</button>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="button-row text-md-end text-center">
                                    <button type="submit" class="btn w-75 btnclr">Actualizar</button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>

            </div>
            <footer>
                <p>CBtis 223 &copy; 2023. Todos los derechos reservados.</p>
                <p>Contacto: </p>
            </footer>
        </div>
</body>

</html>