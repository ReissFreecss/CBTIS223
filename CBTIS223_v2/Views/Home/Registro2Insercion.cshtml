@using Microsoft.AspNetCore.Identity
@model EstudiantesServicio
@{
    List<SelectListItem> items = (List<SelectListItem>)ViewBag.items;
    EstudiantesServicio Estudiante = ViewBag.estudiante;
    ViewBag.Title = "Prácticas Profesionales Insercion";
    Layout = "_Layout";
}

            <form method="post" asp-action="InsertarRegistros" asp-controller="Registros2">
                <!--Numero de control y Nombre-->
                <div class="row mb-3">
                    <h4 class="mt-4">Registro Practicas Profesionales</h4>
                    <div class="col-md-6">
                        <input type="hidden" asp-for="NumeroControl" />
                        <div class="form-group">
                <label asp-for="NumeroControl" class="form-label"><strong>Número de Control:</strong></label>
                            <input asp-for="NumeroControl" class="form-control" readonly/>
                        </div>
                    </div>
                    <div class="col-md-6">
            <label for="Nombre" class="form-label"><strong>Nombre(s) del Alumno:</strong> </label>
                        <input type="text" class="form-control" id="Nombre" name="Nombre"  value="@Estudiante.Nombre" readonly/>
                    </div>
                </div>

                <!--Apellidos-->
                <div class="row mb-3">
                    <div class="col-md-6 ">
            <label for="Apellidos" class="form-label"><strong>Apellidos del Alumno:</strong> </label>
                        <input type="text" class="form-control" id="Apellidos" name="Apellidos" value="@Estudiante.Apellidos" readonly />
                    </div>
                </div>

                <!--CURP y Especialidad-->
                <div class="row mb-3">
                    <div class="col-md-6">
                        <label for="ApellidoPaterno" class="form-label"><strong>CURP:</strong> </label>
                        <input type="text" class="form-control" id="Curp" name="Curp" value="@Estudiante.Curp" readonly />
                    </div>

                    <div class="col-md-6">
            <label for="ApellidoPaterno" class="form-label"><strong>Especialidad:</strong> </label>
                        <input type="text" class="form-control" id="Especialidad" name="Especialidad" value="@Estudiante.Especialidad" readonly />
                    </div>
                </div>

                <!--Ciclo Escolar-->
                <div class="row mb-3">
                    <div class="col-md-6">
            <label for="Ciclo" class="form-label"><strong>Ciclo Escolar:</strong> </label>
                        <input type="text" class="form-control" id="Ciclo" name="Ciclo" value="@Estudiante.Ciclo" readonly />
                    </div>
                </div>

                <!--ID instituciones-->
                <!--Institucion-->
                <div class="row mb-3">
                    <div class="col-md-6">
                        <!-- Seleccionar institucion -->
                        <div class="col-md-6">
                <label for="IdInstiServicio" class="form-label"><strong>Selecciona la Institución:</strong> </label>
                            @Html.DropDownList("IdInstiPracticas",items,"",new {@class="form-select"})
                        </div>

                    </div>
                    <div class="col-md-6">
                        <!--Lectura de actividad que realiza el alumno en su servicio-->
            <label for="Actividad_Servicio" class="form-label"><strong>Actividad que Realiza:</strong> </label>
                        <input type="text" class="form-control" id="actividad_practicas" name="actividad_practicas"
                               oninput="this.value = this.value.toUpperCase()" required>
                    </div>
                </div>

                <!--Periodo-->
                <div class="row mb-3">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="FechaInicio" class="form-label"><strong>Fecha de Inicio:</strong></label>
                            <div class="input-group">
                                <input type="date" id="FechaInicio" pattern="\d{4}/\d{2}/\d{2}" placeholder="aaaa/mm/dd" name="FechaInicioPracticas" class="form-control" required>
                                <!--<div class="input-group-append">
                                    <span class="input-group-text Inicio" id="FechaInicioServicio" name="FechaInicioServicio" style="cursor: pointer;">
                                        <i class="fas fa-calendar"></i>
                                    </span>
                                </div>
                                -->
                            </div>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="FechaFinal" class="form-label"><strong>Fecha Final:</strong></label>
                            <div class="input-group">
                                <input type="date" id="FechaFinal" pattern="\d{4}/\d{2}/\d{2}" placeholder="aaaa/mm/dd" name="FechaTerminoPracticas" class="form-control" required>
                                <!--<div class="input-group-append">
                                    <span class="input-group-text Fin" id="FechaTerminoServicio" name="FechaTerminoServicio" style="cursor: pointer;">
                                        <i class="fas fa-calendar"></i>
                                    </span>
                                </div>
                                -->
                            </div>
                        </div>
                    </div>
                </div>

                <script>
                    const input = document.getElementById('FechaInicio');
                    input.addEventListener('change', () => {
                        console.log(input.value);
                    });
                    const input2 = document.getElementById('FechaFinal');
                    input2.addEventListener('change', () => {
                        console.log(input2.value);
                    });
                </script>
                <!--Botones-->
                <div class="row mb-3 mb-4">
                    <div class="col-md-6">
                        <button type="reset" class="btn w-25 btnclr button-row ">Limpiar</button>
                    </div>
                    <div class="col-md-6 text-end">
                        <button type="submit" class="btn w-25 btnclr button-row">Registro</button>
                    </div>
                </div>

            </form>